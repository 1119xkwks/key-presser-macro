{
  "name": "key-presser-macro",
  "version": "0.1.0",
  "description": "A powerful keyboard macro application built with Electron and Next.js",
  "author": "Antigravity",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "next:build": "next build",
    "electron:build": "next build && cross-env CSC_SKIP_SIGN=true electron-builder",
    "electron:start": "electron .",
    "start": "next start",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.macro.keypresser",
    "productName": "KeyPresserMacro",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "next": "16.1.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}